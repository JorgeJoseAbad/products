
    <h2>THIS IS THE LIST OF PRODUCTS WE HAVE ON STORE<h2>
      <div id="list-procucts">
        <ul>
            <% products.forEach((product) => { %>
              <li class="one-product">
                <div class="image">
                 <img src="<%=product.imageUrl%>">
                </div>
                <div class="productInformation ">
                  <h5><%= product.name %></h5>
                  <div class="details">
                    <p>price $<%= product.price %></p>
                    <p>description <%=product.description%><br></p>
                  </div>
                  <div >
                    <a href="/products/<%= product._id %>">View Details</a>
                    <a href="/products/<%= product._id %>/edit/">Edit Product</a>
                  </div>
                  <div class="delete-form">
                    <form action="/products/<%= product._id%>/delete" method="POST">
                       <button type="submit">Delete Product</button>
                    </form>
                  </div>
                </div>
              </li>
            <%  }) %>
        </ul>
      </div>
   <hr>
    <form action="/products/search">
      <label for="search-term">Search for an item by name</label>
      <input type="text" name="searchTerm" id="search-term">

      <button type="submit">Search</button>
    </form>

    <a href="/products/expensive">Most Expensive Items</a>
    <a href="/products/cheapest">Cheapest Items</a>
    <a href="/products/new">New</a>
