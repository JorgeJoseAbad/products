

    <form class="measure center" action="/products/<%= product._id %>" method="POST">
      <fieldset id="update" class="ba b--transparent ph0 mh0">

        <div class="mt3">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" value="<%= product.name %>">
        </div>
        <div class="mv3">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" value="<%= product.price %>">
        </class>
        <div class="mv3">
          <label for="image-url">Image URL</label>
          <input type="text" name="imageUrl" id="image-url" value="<%= product.imageUrl %>">
        </class>
        <div class="mv3">
          <label for="description">Description</label>
          <textarea type="text" name="description" id="description"><%= product.description %></textarea>
        </div>

      </fieldset>
      <button type="submit">Update Product</button>
    </form>
