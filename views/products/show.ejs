

  <h1><%= product.name %></h1>
  <img src="<%= product.imageUrl %>" height="400" width="400">
  <h3>Price: <span>$<%= product.price %></span></h3>
  <p><%= product.description %></p>
  <hr>
  <h2>Reviews</h2>
  <ul>
    <% product.reviews.forEach((review) => { %>
      <li>
        <p><%= review.content %></p>
        <strong><%= review.author %></strong>
      </li>
    <%  }); %>
  </ul>
  <a href="/products/<%= product._id %>/reviews/new">New Review</a>
  <br>
  <a href="/products">return to products page</a>
