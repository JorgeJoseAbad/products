<main class="mw6 center">
  <h4 class="f3 f2-m f1-l helvetica bb b--dark-gray pb2">
    List of ordened products by
    <%=searchTerm%>
  </h4>
  <div class="pa3 pa5-ns">
    <%if (products.length === 0) {%>
    <b>No hay productos buscados por el t√©rmino: "
      <%=searchTerm%>"</b>
    <%} else {%>
    <div class="search-results">
      <% products.forEach((product) => { %>
      <article class="dt w-100 bb b--black-05 pb2 mt2">
        <div class="dtc w2 w3-ns v-mid">
            <a href="<%=product.id%>"">
              <img src="<%=product.imageUrl%>"  class="ba b--black-10 db br2 w2 w3-ns h2 h3-ns" />
            </a>
        </div>
        <div class="dtc v-mid pl3">
          <h1 class="f6 f5-ns fw6 lh-title black mv0">
            <%= product.name %>
          </h1>
          <h2 class="f6 fw4 mt0 mb0 black-60">$
            <%= product.price %>
          </h2>
        </div>
        <div class="dtc v-mid">
          <form class="w-100 tr" action="/working" method="get">
            <button class="f6 button-reset bg-white ba b--black-10 dim pointer pv1 black-60" type="submit">Buy it!</button>
          </form>
        </div>
      </article>
      <%  }); %>
    </div>
    <%}%>

  </div>
  <a href="/products">return to index</a>
</main>
