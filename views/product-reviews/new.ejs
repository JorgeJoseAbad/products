<!-- views/product-reviews/new.ejs -->
<form class="pa4 black-80" action="/products/<%= product._id %>/reviews" method="POST">
  <div class="measure">
    <label class="f6 b db mb2" for="author">Email Address</label>
    <input class="input-reset ba b--black-20 pa2 mb2 db w-100" type="text" name="author" id="author">
  </div>

  <div class="measure">
    <label class="f6 b db mb2" for="author">Stars</label>
    <input class="input-reset ba b--black-20 pa2 mb2 db w-100" type="number" name="stars" id="stars">
  </div>

  <div class="measure">
    <label class="f6 b db mb2" for="content">Content</label>
    <textarea class="input-reset ba b--black-20 pa2 mb2 db w-100" name="content" rows="3" cols="80"></textarea>
  </div>

  <button class="no-underline near-white bg-animate bg-near-black hover-bg-gray inline-flex items-center ma2 tc br2 pa2" type="submit">Submit Review</button>
</form>
